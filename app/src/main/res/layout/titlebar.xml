<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_hight"
    android:background="@drawable/ab_solid_example"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/title_image_button_bg"
        android:scaleType="center"
        android:src="@drawable/icon_back"
         />


    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_22" />

    <ImageView
        android:id="@+id/right_image_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:background="@drawable/title_image_button_bg"
        android:src="@drawable/ic_search_normal"
        />


</RelativeLayout>